@{
    ViewBag.Title = "Upload";
}

<h2>Upload your images</h2>
<div id="uploadBox">
    <span>Drop files here</span>
</div>

<ul data-bind="template: { name: 'upload-template', foreach: uploads }">
</ul>
<script type="text/html" id="upload-template">
    <li><span>Uploaded: <small data-bind="text: name"></small>.</span><span>Size: <small
        data-bind="text: size"></small></span><span>Server path: <a data-bind="attr:{href: path}, text:path"></a></span></li>
</script>


@section scripts {
    @Scripts.Render("~/bundles/uploader")
}